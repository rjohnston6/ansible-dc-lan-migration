#==============================================================================
# Static Routes Inventory for Fabric: {{ fabric_name }}
#==============================================================================
# Generated by: 1.0-profile-existing-switches.yml
#
# Contains all static routes discovered from each switch's running configuration.
# This includes:
#   - Default routes (0.0.0.0/0)
#   - Specific prefix routes
#   - VRF-specific routes
#
# Route Format:
#   prefix: Destination network (e.g., 0.0.0.0/0, 10.0.0.0/8)
#   next_hop: Next hop IP address or interface
#   interface: Outgoing interface (optional)
#   vrf: VRF context (empty string for default VRF)
#   name: Route name/tag (optional)
#   track: Track object number (optional)
#==============================================================================

switches:
{% for switch_name, switch_data in fabric_routes.items() %}
  {{ switch_name }}:
    routes:
{% for route in switch_data.routes | default([]) %}
      - prefix: "{{ route.prefix }}"
        next_hop: "{{ route.next_hop | default('') }}"
{% if route.interface is defined and route.interface %}
        interface: "{{ route.interface }}"
{% endif %}
{% if route.vrf is defined and route.vrf %}
        vrf: "{{ route.vrf }}"
{% endif %}
{% if route.name is defined and route.name %}
        name: "{{ route.name }}"
{% endif %}
{% if route.track is defined and route.track %}
        track: {{ route.track }}
{% endif %}
{% if route.tag is defined and route.tag %}
        tag: {{ route.tag }}
{% endif %}
{% endfor %}
{% if switch_data.routes | default([]) | length == 0 %}
      []
{% endif %}
{% endfor %}
