#==============================================================================
# Logging Servers Inventory for Fabric: {{ fabric_name }}
#==============================================================================
# Generated by: 1.0-profile-existing-switches.yml
#
# Contains syslog server definitions discovered from each switch.
#==============================================================================

switches:
{% for switch_name, switch_data in fabric_logging.items() %}
  {{ switch_name }}:
    logging_servers:
{% for server in switch_data.logging_servers | default([]) %}
      - host: "{{ server.host }}"
{% if server.severity is defined and server.severity %}
        severity: "{{ server.severity }}"
{% endif %}
{% if server.use_vrf is defined and server.use_vrf %}
        use_vrf: "{{ server.use_vrf }}"
{% endif %}
{% if server.facility is defined and server.facility %}
        facility: "{{ server.facility }}"
{% endif %}
{% if server.port is defined and server.port %}
        port: {{ server.port }}
{% endif %}
{% if server.secure is defined %}
        secure: {{ server.secure | lower }}
{% endif %}
{% endfor %}
{% if switch_data.logging_servers | default([]) | length == 0 %}
      []
{% endif %}
{% endfor %}
