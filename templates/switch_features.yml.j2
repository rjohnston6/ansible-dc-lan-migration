#==============================================================================
# Template: Features Inventory Generator
#==============================================================================
# Purpose: Generate human-readable YAML inventory files from profiled
#          NX-OS feature configurations
#
# Input Variables:
#   - fabric_name: Name of the fabric
#   - fabric_features: Dictionary of switch features grouped by switch
#     Structure: {switch_name: {features: [...]}}
#
# Output: YAML file with enabled features organized by switch
#
# Features Tracked:
#   - All enabled NX-OS features (e.g., vpc, lacp, hsrp, ospf, interface-vlan)
#   - Feature state (enabled/disabled)
#
# Use Cases:
#   - Ensure target switches have required features enabled before migration
#   - Validate feature parity between source and destination switches
#   - Document current feature configuration for compliance
#==============================================================================

# Features Inventory for Fabric: {{ fabric_name }}
# Generated by Ansible automation

switches:
{% for switch_name, switch_data in fabric_features.items() %}
  {{ switch_name }}:
    features:
{% for feature in switch_data.features | sort %}
      - {{ feature }}
{% endfor %}
{% endfor %}
