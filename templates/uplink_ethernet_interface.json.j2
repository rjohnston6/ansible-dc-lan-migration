{#
================================================================================
Template: Uplink Ethernet Interface Configuration (JSON Payload)
================================================================================
Purpose:
  Generate JSON payload for the NDFC REST API to configure Ethernet interfaces
  that are members of port-channel uplinks.

API Endpoint:
  POST /appcenter/cisco/ndfc/api/v1/lan-fabric/rest/globalInterface

Input Variables:
  serial_number              - Target switch serial number
  fabric_name                - Fabric name
  interface_name             - Ethernet interface name (e.g., Ethernet1/1)

Key Settings:
  policy: int_trunk_host     - Trunk interface policy for host connectivity
  interfaceType: INTERFACE_ETHERNET - Physical Ethernet interface
  skipResourceCheck: false   - Validate resource availability

Notes:
  - Configures Ethernet interfaces as trunk ports for port-channel members
  - Default settings suitable for uplink interfaces to aggregation layer
  - MTU set to jumbo for optimal performance
================================================================================
#}
{
  "policy": "int_trunk_host",
  "interfaceType": "INTERFACE_ETHERNET",
  "interfaces": [
    {
      "serialNumber": "{{ serial_number }}",
      "interfaceType": "INTERFACE_ETHERNET",
      "fabricName": "{{ fabric_name }}",
      "ifName": "{{ interface_name }}",
      "nvPairs": {
        "BPDUGUARD_ENABLED": "no",
        "BPDUFILTER_ENABLED": "no",
        "LINK_TYPE": "auto",
        "PORTTYPE_FAST_ENABLED": "true",
        "MTU": "jumbo",
        "SPEED": "Auto",
        "ALLOWED_VLANS": "none",
        "NATIVE_VLAN": "",
        "DESC": "",
        "NEGOTIATE_AUTO": "true",
        "CDP_ENABLE": "true",
        "ENABLE_ORPHAN_PORT": "false",
        "PORT_DUPLEX_MODE": "auto",
        "BANDWIDTH": "",
        "INHERIT_BW": "",
        "DEBOUNCE_TIMER": "100",
        "DEBOUNCE_LINKUP_TIMER": "",
        "ENABLE_ERRDISABLE_ACL": "true",
        "FEC": "auto",
        "CONF": "",
        "ADMIN_STATE": "true",
        "ENABLE_NETFLOW": "false",
        "NETFLOW_MONITOR": "",
        "NETFLOW_SAMPLER": "",
        "ENABLE_PFC": "false",
        "ENABLE_QOS": "false",
        "QOS_POLICY": "",
        "QUEUING_POLICY": "",
        "ENABLE_MONITOR": "false",
        "enableVlanMapping": "false",
        "vlanMappingEntries": "",
        "ENABLE_STORM_CONTROL": "false",
        "STORM_CONTROL_ACTION": "",
        "STORM_CONTROL_BCAST_LEVEL_PERCENT": "",
        "STORM_CONTROL_MCAST_LEVEL_PERCENT": "",
        "STORM_CONTROL_UCAST_LEVEL_PERCENT": "",
        "STORM_CONTROL_BCAST_LEVEL_PPS": "",
        "STORM_CONTROL_MCAST_LEVEL_PPS": "",
        "STORM_CONTROL_UCAST_LEVEL_PPS": "",
        "INTF_NAME": "{{ interface_name }}"
      }
    }
  ],
  "skipResourceCheck": false
}
